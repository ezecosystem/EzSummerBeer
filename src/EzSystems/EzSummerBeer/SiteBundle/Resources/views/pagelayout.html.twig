<!DOCTYPE html>
<html lang="en">
<head>
{% block head %}

    <meta charset="utf-8">

    {% if title is not defined and content is defined %}
        {% set title = ez_content_name( content ) %}
    {% endif %}
    <title>{{ title|default( '' ) ? title ~ ' - ' }}{{ "eZ Summer Beer" }}</title>

    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <link rel="stylesheet" href="{{ asset( "bundles/ezsummerbeersite/css/bootstrap.css" ) }}">
    <link rel="stylesheet" href="{{ asset( "bundles/ezsummerbeersite/css/flat-ui.css" ) }}">

    <link rel="stylesheet" href="{{ asset( "bundles/ezsummerbeersite/css/flat-style.css" ) }}">

    <link rel="stylesheet" href="{{ asset( "bundles/ezsummerbeersite/css/ui-kit-styles.css" ) }}">

    <link rel="stylesheet" href="{{ asset( "bundles/ezsummerbeersite/css/ez-summer-beer.css" ) }}">

{% endblock %}
</head>

<body>

<div class="page-wrapper">
    <!-- header-11 -->
    {% block header %}{% include "EzSummerBeerSiteBundle:parts:header.html.twig" %}{% endblock %}

    {% block content %}{% endblock %}

    <!-- footer-3 -->
    {% block footer %}{% include "EzSummerBeerSiteBundle:parts:footer.html.twig" %}{% endblock %}
</div>

<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset( "bundles/ezsummerbeersite/js/jquery-1.10.2.min.js" ) }}"></script>
<script src="{{ asset( "bundles/ezsummerbeersite/js/bootstrap.min.js" ) }}"></script>
</body>
</html>
